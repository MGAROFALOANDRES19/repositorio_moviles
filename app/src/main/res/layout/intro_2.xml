<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/intro_2_background"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/image_intro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:paddingBottom="100dp">
    <ImageView
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:background="@drawable/intro_2_image"
        />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:layout_marginTop="25dp"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/image_intro">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/acercandose"
                android:textStyle="bold"
                android:layout_marginRight="5dp"
                android:textSize="18dp"
                android:textColor="@android:color/white"
                android:layout_gravity="center_horizontal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/podras_ver"
            android:layout_marginRight="5dp"
            android:textSize="18dp"
            android:textColor="@android:color/white"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/accesibilidad"
            android:layout_marginRight="5dp"
            android:textSize="18dp"
            android:textColor="@android:color/white"
            android:layout_gravity="center_horizontal"/>
    </LinearLayout>

</RelativeLayout>